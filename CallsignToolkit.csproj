<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>N1CCK.CallsignToolkit</PackageId>
    <Title>N1CCK.CallsignToolkit</Title>
    <Authors>n1cck</Authors>
    <Description>A collection of utilities for working with Amateur Radio callsigns </Description>
    <RepositoryUrl>https://github.com/nkbooth/CallsignToolkit</RepositoryUrl>
    <PackageTags>ham radio, amateur radio, callsign, callsign toolkit</PackageTags>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>0.0.0.4</Version>
    <FileVersion>0.0.0.4</FileVersion>
    <AssemblyVersion>0.0.0.4</AssemblyVersion>
    <AssemblyFileVersion>0.0.0.4</AssemblyFileVersion>
    <PackageVersion>0.0.0.4</PackageVersion>
    <PackageReleaseNotes>Adds QRZ XML Lookup object</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>
